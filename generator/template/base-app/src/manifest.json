{
  "manifest_version": 2,
  "name": "<%- name %>",
  "homepage_url": "http://localhost/",
  "description": "A Vue Browser Extension",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    <%_ if (options.components.contentScript) { -%>
    "activeTab",
    <%_ } -%>
    "<all_urls>",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    <%_ if (options.components.popup) { -%>
    "default_popup": "popup/popup.html",
    <%_ } -%>
    "default_title": "<%- name %>",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  <%_ if (options.components.options) { -%>
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  <%_ } -%>
  }
}
